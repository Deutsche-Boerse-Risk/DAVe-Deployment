apiVersion: v1
kind: ConfigMap
metadata:
  name: dave-api
  namespace: {{ namespace }}
  labels:
    app: dave
    layer: api
    project: dave
data:
  log.level: "INFO"
  db.name: "{{ database_name }}"
  #db.connection_url: "mongodb://mongo-svc-1.database:27017,mongo-svc-2.database:27017,mongo-svc-3.database:27017/?replicaSet=my_replica_set"
  db.connection_url: "mongodb://{{ database_hostname }}:{{ database_port }}/"
  http.enable: "TRUE"
  http.compression: "TRUE"
  http.auth: "TRUE"
  http.redirect: "TRUE"
  http.redirectUri: "{{ api_dns }}"
  http.cors: "TRUE"
  http.cors_origin: "*"
