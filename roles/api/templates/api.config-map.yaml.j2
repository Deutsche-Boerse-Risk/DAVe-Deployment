apiVersion: v1
kind: ConfigMap
metadata:
  name: dave-api
  namespace: {{ namespace }}
  labels:
    app: dave
    layer: api
    project: dave
data:
  java.opts: "-Xmx512m"
  log.level: "INFO"
  api.ssl: "true"
  api.ssl_client_auth: "false"
  api.compression: "true"
  api.auth: "true"
  api.auth_jwt_permissions_claim_key: "{{ jwt_permissions_claim_key }}"
  api.cors: "true"
  api.cors_origin: "*"
  api.csfr: "true"
  storemanager.ssl_verify_host: "false"
