apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: dave-api
  labels:
    app: dave
    layer: api
    project: dave
  namespace: {{ namespace }}
spec:
  replicas: 3
  template:
    metadata:
      name: dave-api
      labels:
        name: dave-api
        app: dave
        layer: api
        project: dave
      annotations:
        container.apparmor.security.beta.kubernetes.io/dave-api: runtime/default
        container.apparmor.seccomp.beta.kubernetes.io/dave-api: docker/default
    spec:
      serviceAccount: dave-api
      containers:
        - image: dbgdave/dave-api:{{ api_release }}
          name: dave-api
          imagePullPolicy: Always
          resources:
            requests:
              cpu: 100m
              memory: 512Mi
            limits:
              cpu: 500m
              memory: 1Gi
          env:
            - name: JAVA_OPTS
              valueFrom:
                configMapKeyRef:
                  name: dave-api
                  key: java.opts
            - name: DAVE_LOG_LEVEL
              valueFrom:
                configMapKeyRef:
                  name: dave-api
                  key: log.level
            - name: DAVE_DB_NAME
              valueFrom:
                configMapKeyRef:
                  name: dave-api
                  key: db.name
            - name: DAVE_DB_URL
              valueFrom:
                configMapKeyRef:
                  name: dave-api
                  key: db.connection_url
            - name: DAVE_HTTP_ENABLE
              valueFrom:
                configMapKeyRef:
                  name: dave-api
                  key: http.enable
            - name: DAVE_HTTP_COMPRESSION
              valueFrom:
                configMapKeyRef:
                  name: dave-api
                  key: http.compression
            - name: DAVE_HTTP_AUTH
              valueFrom:
                configMapKeyRef:
                  name: dave-api
                  key: http.auth
            - name: DAVE_HTTP_CORS
              valueFrom:
                configMapKeyRef:
                  name: dave-api
                  key: http.cors
            - name: DAVE_HTTP_CORS_ORIGIN
              valueFrom:
                configMapKeyRef:
                  name: dave-api
                  key: http.cors_origin
            - name: DAVE_HTTP_AUTH_PERMISSIONS_CLAIM_KEY
              valueFrom:
                secretKeyRef:
                  name: dave-api
                  key: http.jwt_permissions_claim_key
            - name: DAVE_HTTP_SSL_SERVER_PUBLIC_KEY
              valueFrom:
                secretKeyRef:
                  name: dave-api
                  key: http.public_key
            - name: DAVE_HTTP_SSL_SERVER_PRIVATE_KEY
              valueFrom:
                secretKeyRef:
                  name: dave-api
                  key: http.private_key
            - name: DAVE_HTTP_AUTH_PUBLIC_KEY
              valueFrom:
                secretKeyRef:
                  name: dave-api
                  key: http.jwt_public_key
          ports:
            - containerPort: 8080
              name: https
          livenessProbe:
            httpGet:
              path: /healthz
              port: 8080
              scheme: HTTPS
            initialDelaySeconds: 30
          readinessProbe:
            httpGet:
              path: /readiness
              port: 8080
              scheme: HTTPS
            initialDelaySeconds: 30
