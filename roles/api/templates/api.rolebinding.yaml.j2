kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1alpha1
metadata:
  name: dave-api
  labels:
    app: dave
    layer: api
    project: dave
  namespace: {{ namespace }}
subjects:
  - kind: ServiceAccount
    name: dave-api
    namespace: {{ namespace }}
roleRef:
  kind: Role
  name: dave-api
  apiGroup: rbac.authorization.k8s.io
