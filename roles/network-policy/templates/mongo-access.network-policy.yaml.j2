kind: NetworkPolicy
apiVersion: extensions/v1beta1
metadata:
  name: dave-mongo-access
  namespace: {{ namespace }}
spec:
  podSelector:
    matchLabels:
      app: mongo
      layer: db
      project: dave
  ingress:
    - from:
      - podSelector:
          matchLabels:
            app: mongo
            layer: db
            project: dave
      - podSelector:
          matchLabels:
            app: dave
            layer: db
            project: dave
